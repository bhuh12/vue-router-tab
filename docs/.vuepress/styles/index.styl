// 站点名称前注入 logo
.navbar .home-link
  position: relative;
  top: -2px;

  &::before
    $s = 1.3rem
    content ''
    display inline-block
    margin-right .3rem
    width $s
    height $s
    vertical-align: middle
    background url(https://raw.githubusercontent.com/bhuh12/vue-router-tab/dev/docs/.vuepress/public/img/logo.png)
    background-size cover

  .site-name
    vertical-align middle

