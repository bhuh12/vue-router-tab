$color = #3eaf7c;

/*滚动条*/
::-webkit-scrollbar
  $w = 6px

  width $w
  height $w

  &-thumb
    background rgba(0, 0, 0, .1)
    border-radius 20px

    &:hover
      background rgba($color, .5)
      
    &:active
      background rgba($color, .8)

  &-corner
    display none


// 站点名称前注入 logo
.navbar .home-link
  &::before
    $s = 1.3rem
    content ''
    display inline-block
    margin-right .3rem
    margin-top .45rem
    width $s
    height $s
    vertical-align: top
    background url(https://bhuh12.github.io/vue-router-tab/demo/img/logo.png)
    background-size cover


// Logo 图片
.home .hero img
  width 180px

.nav-links .nav-link.external
  margin-right -.5em
  